# enemy script for automaton helpers

let health = 10000;

let slowTicks = 45;
let finalSpeed = 35.0;
let finalAngle = 125.0; # left
let speedTicks = 45;

if(!isLeft(getPosition())){
    finalAngle = flipY(finalAngle);
}

setClearable();
setHealth(health);
shiftSpeedPeriod(0, slowTicks);
addScript("danmaku_enemy_boss3_6", 3);

wait isFlagged1();

removeSpawns();
shiftVelocityTurnPeriod(
    finalSpeed,
    finalAngle,
    speedTicks
);