# spawner for blobs final

let numSpawns = 4;
let secsBetweenSpawns = 0.25;
let spawnBound = 20;
let yMin = 120;

func generatePos(){
    let x = random(
        spawnBound,
        gameWidth() - spawnBound
    );
    let y = random(yMin, gameHeight() - spawnBound);
    let pos = [x, y];
    return pos + gameOffset();
}

func spawnTrap(){
    spawn(
        "trap",
        generatePos(),
        <<0,0>>,
        0,
        "trap_3_11"
    );
}

for(let i = 0; i < numSpawns; i = i + 1){
    spawnTrap();
    secTimer(secsBetweenSpawns);
}